<!doctype html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title or metadata.title }}</title>
		{% if description or metadata.description %}
		<meta name="description" content="{{ description or metadata.description }}">
		{% endif %}
		<link rel=canonical href="{{ site.url }}{{ page.url }}">
		<meta property=og:url content="{{ site.url }}{{ page.url }}">
		{% if author or metadata.author %}
		<meta name=author content="{{ author or metadata.author }}">
		{% endif %}
		<link rel=stylesheet href=/assets/recursive.css>
		<link rel=stylesheet href=/words/style.css>
	</head>
	<body>
        {{ content | safe }}
	</body>
</html>
